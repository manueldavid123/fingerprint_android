<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:id="@+id/purchase_button"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:text="@string/purchase"
            android:textColor="?android:attr/textColorPrimaryInverse" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:stretchColumns="0,1">

            <TableRow android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Aciertos" />

                <TextView
                    android:id="@+id/accepted"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Fallos" />

                <TextView
                    android:id="@+id/notAccepted"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Aciertos válidos" />

                <TextView
                    android:id="@+id/acceptedValid"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Fallos válidos" />

                <TextView
                    android:id="@+id/notAcceptedValid"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />
            </TableRow>
        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/admin_fingerprints"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADMINISTRAR HUELLAS" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>